<Window x:Class="WpfCronometro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCronometro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="chronometerLabel" Content="00:00:00" FontSize="70" FontStyle="Normal" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Foreground="#FF0836ED"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="134,339,0,0" VerticalAlignment="Top" Height="54" Width="161" FontFamily="Arial Black" FontSize="18" RenderTransformOrigin="1,0"  Click="StartButton_Click"/>
        <Button Content="Pause" HorizontalAlignment="Center" Margin="0,339,0,0" VerticalAlignment="Top" Height="54" Width="161" FontFamily="Arial Black" FontSize="18" Click="PauseButton_Click"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="508,339,0,0" VerticalAlignment="Top" Height="54" Width="161" FontFamily="Arial Black" FontSize="18" Click="StopButton_Click"/>

    </Grid>
</Window>
